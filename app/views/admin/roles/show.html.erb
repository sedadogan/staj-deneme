<% if role = Role.find(:first, :conditions => {:id => params[:id]}) %>

  <form  class="form-horizontal" >
    <fieldset>
      <legend>Kurum Rolü</legend>
      <div class="control-group">
        <label class="control-label" for="input01">Role Adı (*)</label>
        <div class="controls">
          <input type="text" class="input-xlarge disable" id="disabledInput" disabled="" value="<%= role[:name] %>">
        </div>
      </div>
    </fieldset>
    <div class="form-actions">
    <a href="/<%= request[:controller] %>/<%= role[:id] %>/edit" class="btn btn-primary">Düzenle</a>
  </div>
</form>
<% else %>
  <center>
    Böyle Bir Kullanıcı Bulunamadı
  </center>
<% end %>

