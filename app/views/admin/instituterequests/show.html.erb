<% if instituterequest = InstituteRequest.find(:first, :conditions => {:id => params[:id]}) %>

  <form class="form-horizontal" >
    <fieldset>
      <legend>Stajyer İstek Formu</legend>
      <div class="control-group">
        <label class="control-label" for="select-probation">Stajyer Sayısı (*)</label>
        <div class="controls">
          <input type="text" class="input-xlarge disable" id="disabledInput" disabled="" value="<%= instituterequest.probation_advert.sayi %>">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input16">Bağış İsteğinin Gerekçeleri</label>
        <div class="controls">
          <textarea type="text" class="input-xlarge disable" id="disabledInput" disabled="" rows="5" name="address"><%= instituterequest.content %></textarea>
        </div>
      </div>
    </fieldset>
  </form>
<% else %>
  <center>
    Böyle Bir Kullanıcı Bulunamadı
  </center>
<% end %>

