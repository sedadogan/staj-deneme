<% if institute = Institute.find(:first, :conditions => {:id => params[:id]}) %>

  <form class="form-horizontal" >
    <fieldset>
      <legend>Kurum Kaydı</legend>
      <div class="control-group">
        <label class="control-label" for="input02">Kurum Adı (*)</label>
        <div class="controls">
          <input type="text" class="input-xlarge disable" id="disabledInput" disabled="" value="<%= institute[:name] %>">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="select01">Kurum Tipi (*)</label>
        <div class="controls">
          <input type="text" class="input-xlarge disable" id="disabledInput" disabled="" value="<%= institute.role.name %>">
        </div>
      </div>
      <% if institute[:image] %>
        <div class="control-group">
          <label class="control-label" for="fileInput">Fotoğraf</label>
          <div class="controls">
            <img src="/uploads/institutes/<%= institute[:image] %>">
          </div>
        </div>
      <% end %>
    </fieldset>

    <fieldset>
      <legend>İletişim Bilgileri</legend>
      <div class="control-group">
        <label class="control-label" for="input14">E-mail (*)</label>
        <div class="controls">
          <input type="text" class="input-xlarge disable" id="disabledInput" disabled="" value="<%= institute[:email] %>">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input11">Telefon Numarası</label>
        <div class="controls">
          <input type="text" class="input-xlarge disable" id="disabledInput" disabled="" value="<%= institute[:phone_number] %>">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="select02">İl (*)</label>
        <div class="controls">
          <input type="text" class="input-xlarge disable" id="disabledInput" disabled="" value="<%= institute.city.city %>">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="select-district">İlçe (*)</label>
        <div class="controls">
          <input type="text" class="input-xlarge disable" id="disabledInput" disabled="" value="<%= institute.district.district %>">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input16">Adres</label>
        <div class="controls">
          <textarea type="text" class="input-xlarge disable" id="disabledInput" disabled="" rows="3" name="address"><%= institute[:address] %></textarea>
        </div>
      </div>
    </fieldset>
  </form>
<% else %>
  <center>
    Böyle Bir Kullanıcı Bulunamadı
  </center>
<% end %>

